<script>

document.querySelectorAll('[data-imagezoom="true"]').forEach(function(img) {
    img.addEventListener('click', function(e) {
        // Create and show overlay with zoomed image
        let overlay = document.createElement('div');
        overlay.classList.add('image-zoom-overlay');
        document.body.appendChild(overlay);

        let zoomedImg = document.createElement('img');
        zoomedImg.classList.add('overlay-image');
        zoomedImg.src = e.target.src;  // Use the image's source for zoom
        overlay.appendChild(zoomedImg);

        // Show the overlay
        overlay.style.display = 'flex';

        // Close overlay when clicked
        overlay.addEventListener('click', function() {
            overlay.style.display = 'none';
            overlay.removeChild(zoomedImg);
            document.body.removeChild(overlay);
        });
    });
});


</script>

