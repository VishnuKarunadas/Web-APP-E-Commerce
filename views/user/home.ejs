<div class="container-fluid">
  <div class="inner-sec-shop px-lg-4 px-3">
    <div class="row">
      <% products.forEach(product => { %>
          <div class="col-md-3 product-men women_two">
              <div class="product-nike-info nike">
                  <div class="men-pro-item">
                      <div class="men-thumb-item">
                          <!-- Check if product.productImage exists and has at least one image -->
                          <% if (product.productImage && product.productImage.length > 0) { %>
                              <!-- Display the first image -->
                              <a href="/product/<%= product._id %>">
                                <img src="/uploads/product-images/<%= product.productImage[0] %>" class="img-fluid" alt="<%= product.productName %>">
                              </a>
                              
                          <% } else { %>
                              <!-- Fallback image if no image is available -->
                              <img src="/uploads/product-images/default.jpg" class="img-fluid" alt="<%= product.productName %>">
                          <% } %>
  
                          <div class="men-cart-pro">
                              <div class="inner-men-cart-pro">
                                  <a href="/product/<%= product._id %>" class="link-product-add-cart">Quick View</a>
                              </div>
                          </div>
                          <span class="product-new-top">New</span>
                      </div>
                      <div class="item-info-product">
                          <div class="info-product-price">
                              <div class="grid_meta">
                                  <div class="product_price">
                                      <h4>
                                          <a href="/product/<%= product._id %>" class="product-text">
                                              <%= product.brand ? product.brand.name : '' %> <%= product.productName %>
                                          </a>
                                      </h4>
                                      <div class="grid-price mt-2">
                                          <% if (product.offerPrice && product.offerPrice < product.salePrice) { %>
                                              <span class="money" style="text-decoration: line-through;">$<%= product.regularPrice %></span>
                                              <span class="money" style="color: red; font-weight: bold;">$<%= product.offerPrice %></span>
                                          <% } else if (product.salePrice < product.regularPrice) { %>
                                              <span class="money" style="text-decoration: line-through;">$<%= product.regularPrice %></span>
                                              <span class="money" style="color: red; font-weight: bold;">$<%= product.salePrice %></span>
                                          <% } else { %>
                                              <span class="money">$<%= product.regularPrice %></span>
                                          <% } %>
                                      </div>
                                  </div>
                                  <span class="money "><%= product.status %></span>
                              </div>
                              <ul class="stars">
                                  <% for (let i = 1; i <= 5; i++) { %>
                                      
                                          <a href="#">
                                              <% if (product.averageRating >= i) { %>
                                                  <i class="fa fa-star" aria-hidden="true"></i>
                                              <% } else { %>
                                                  <i class="fa fa-star-o" aria-hidden="true"></i>
                                              <% } %>
                                          </a>
                                      
                                  <% } %>
                              </ul>
  
                              <% if (product.totalRatings > 0) { %>
                                  <span class="rating-count">(<%= product.totalRatings %> reviews)</span>
                              <% } %>
                          </div>
                          <div class="nike single-item hvr-outline-out">
                              <form id="addToCartForm-<%= product._id %>" onsubmit="return false;">
                                  <input type="hidden" name="productId" value="<%= product._id %>">
                                  <input type="hidden" name="quantity" value="1">
                                  <button type="button" class="nike-cart pnike-cart" onclick="addToCart('<%= product._id %>')">
                                      <i class="fas fa-cart-plus"></i>
                                  </button>
                              </form>
                              <form id="addToWishlistForm-<%= product._id %>" onsubmit="return false;">
                                  <input type="hidden" name="productId" value="<%= product._id %>">
                                  <button type="button" class="nike-cart pnike-cart" onclick="addToWishlist('<%= product._id %>')">
                                      <i class="fas fa-heart"></i>
                                  </button>
                              </form>
                          </div>
                      </div>
                      <div class="clearfix"></div>
                  </div>
              </div>
          </div>
      <% }) %>
  </div>
  
        <h3 class="tittle-w3layouts my-lg-4 my-4">New Arrivals for you </h3>

